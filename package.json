{
  "name": "Statbus",
  "author": "SSB",
  "description": "Statbus Client scripts",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "eslint": "eslint client test/client.test tools",
    "eslint-tfs": "eslint client test/client.test tools -f visualstudio",
    "stylelint": "stylelint \"./client/**/*.pcss\"",
    "lint": "npm-run-all -p eslint stylelint",
    "format": "prettier-eslint \"client/**/*.js*\" --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "node tools/run.mjs clean",
    "build": "node tools/run.mjs build",
    "build:debug": "node tools/run.mjs build --debug",
    "start": "node tools/run.mjs start",
    "watch": "node tools/run.mjs watch"
  },
  "targets": {
    "default": {
      "distDir": "./src/nscreg.Server/wwwroot/dist/",
      "source": [
        "./client/index.html"
      ],
      "publicUrl": "/dist"
    }
  },
  "staticFiles": [
    {
      "staticPath": "./node_modules/semantic-ui-css/semantic.min.css",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./node_modules/semantic-ui-css/themes",
      "distDir": "./src/nscreg.Server/wwwroot/themes"
    },
    {
      "staticPath": "./node_modules/antd/lib/tree/style/index.css",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./node_modules/react-datepicker/dist/react-datepicker.min.css",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./node_modules/react-select/dist/react-select.min.css",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/apple-touch-icon.png",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/favicon.ico",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/browserconfig.xml",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/crossdomain.xml",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/humans.txt",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/logo-small.jpg",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/logo.png",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/robots.txt",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/tile-wide.png",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/tile.png",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/styles.css",
      "distDir": "./src/nscreg.Server/wwwroot"
    },
    {
      "staticPath": "./client/fonts",
      "distDir": "./src/nscreg.Server/fonts"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/statisticsnorway/statbus"
  },
  "sideEffects": false,
  "dependencies": {
    "antd": "^3.11.0",
    "babel-polyfill": "^6.26.0",
    "fast-xml-parser": "^3.2.0",
    "file-saver": "^2.0.5",
    "formik": "^1.5.8",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "papaparse": "^5.2.0",
    "ramda": "^0.25.0",
    "react": "^16.8.4",
    "react-beautiful-dnd": "^7.0.2",
    "react-datepicker": "1.8.0",
    "react-dom": "^16.8.4",
    "react-dropzone": "^4.2.8",
    "react-notifications": "^1.6.0",
    "react-redux": "^5.0.7",
    "react-router": "^3.2.0",
    "react-router-redux": "^4.0.8",
    "react-select": "^1.2.1",
    "react-to-print": "^1.0.17",
    "recompose": "^0.26.0",
    "redux": "^4.0.0",
    "redux-act": "^1.7.1",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "semantic-ui-react": "^0.86.0",
    "yup": "^0.28.5"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.9.3",
    "@types/file-saver": "^2.0.5",
    "assets-webpack-plugin": "^3.9.7",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.5",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-ramda": "^1.6.3",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-jest": "^22.4.4",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.23.6",
    "copy-dir": "^0.3.0",
    "cpy": "^10.0.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.11",
    "del": "^3.0.0",
    "enzyme": "^3.7.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-fetch": "^0.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "eventsource-polyfill": "^0.9.6",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.4",
    "lint-staged": "^6.1.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "parcel": "^2.9.3",
    "parcel-reporter-bundle-manifest": "^1.0.0",
    "parcel-reporter-static-files-copy": "^1.5.2",
    "postcss": "^8.2.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-flexibility": "^2.0.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.0",
    "postcss-nested-props": "^2.0.0",
    "precss": "^3.1.2",
    "prettier-eslint-cli": "^4.7.1",
    "prop-types": "^15.6.2",
    "react-hot-loader": "^3.1.3",
    "redux-logger": "^3.0.6",
    "sass": "^1.68.0",
    "sass-loader": "^10.4.1",
    "semantic-ui-css": "^2.2.14",
    "style-loader": "^0.20.2",
    "stylelint": "^8.4.0",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-standard": "^18.0.0",
    "sugarss": "^1.0.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.24.3"
  },
  "browserslist": [
    "last 2 version",
    "IE 10"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "IE 10"
            ]
          },
          "modules": false,
          "useBuiltIns": true
        }
      ],
      "react"
    ],
    "plugins": [
      "transform-async-generator-functions",
      "transform-class-properties",
      "transform-export-extensions",
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "."
          ],
          "alias": {
            "components": "./client/components",
            "helpers": "./client/helpers",
            "layout": "./client/layout",
            "pages": "./client/pages"
          }
        }
      ],
      "ramda",
      [
        "lodash",
        {
          "id": [
            "lodash",
            "semantic-ui-react"
          ]
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-inline-elements"
        ]
      },
      "test": {
        "presets": [
          "jest"
        ],
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    },
    "retainLines": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "plugins": [
      "babel",
      "fetch",
      "jsx-a11y",
      "import",
      "react",
      "compat",
      "jest"
    ],
    "settings": {
      "import/extensions": [
        ".js",
        ".jsx"
      ],
      "import/resolver": "babel-module",
      "polyfills": [
        "fetch",
        "promises"
      ]
    },
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "compat/compat": "error",
      "import/no-extraneous-dependencies": 0,
      "linebreak-style": 0,
      "no-confusing-arrow": 0,
      "no-nested-ternary": 0,
      "no-plusplus": 0,
      "semi": [
        2,
        "never"
      ],
      "newline-per-chained-call": [
        2,
        {
          "ignoreChainWithDepth": 10
        }
      ],
      "object-curly-newline": [
        "error",
        {
          "consistent": true
        }
      ],
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": false,
          "assignment": false
        }
      ],
      "jsx-a11y/label-has-for": [
        2,
        {
          "required": {
            "every": [
              "id"
            ]
          }
        }
      ],
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to",
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ]
    }
  },
  "postcss": {
    "parser": "sugarss",
    "plugins": {
      "postcss-easy-import": {
        "extensions": [
          ".pcss"
        ]
      },
      "postcss-import": {},
      "precss": {},
      "postcss-cssnext": {},
      "postcss-flexibility": {},
      "postcss-nested-props": {}
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-css-modules",
      "stylelint-config-standard"
    ],
    "rules": {
      "no-extra-semicolons": true,
      "declaration-block-semicolon-newline-after": "never-multi-line",
      "declaration-block-semicolon-newline-before": "never-multi-line",
      "declaration-block-semicolon-space-after": "never",
      "declaration-block-semicolon-space-before": "never",
      "declaration-block-trailing-semicolon": "never",
      "string-quotes": "single"
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "cobertura"
    ],
    "collectCoverageFrom": [
      "client/**/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "^components$": "<rootDir>/client/components/",
      "^helpers$": "<rootDir>/client/helpers/",
      "^layout$": "<rootDir>/client/layout/",
      "^./styles.pcss$": "<rootDir>/tools/cssstub.js",
      "^.+\\.(css|pcss)$": "<rootDir>/tools/cssstub.js"
    },
    "testEnvironment": "node",
    "testRegex": "/test/client.test/.*|(\\.|/)(test|spec)\\.jsx?$",
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules)[/\\\\]"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "prettier-eslint --write",
      "git add"
    ]
  }
}
